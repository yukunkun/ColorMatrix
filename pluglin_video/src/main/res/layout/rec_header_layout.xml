<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/color_write"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.bigkoo.convenientbanner.ConvenientBanner android:layout_width="match_parent"
                                                  android:id="@+id/con_banner"
                                                  app:canLoop="true"
                                                  android:layout_height="160dp">
    </com.bigkoo.convenientbanner.ConvenientBanner>
    <TextView android:layout_width="match_parent"
              android:text="分类"
              android:drawablePadding="10dp"
              android:paddingLeft="5dp"
              android:textColor="@color/color_494949"
              android:drawableLeft="@drawable/shape_header_layout"
              android:gravity="center_vertical"
              android:layout_height="35dp"/>
    <View android:layout_height="0.5dp"
          android:background="@color/color_eaeaea"
          android:layout_width="match_parent"/>
    <LinearLayout android:layout_width="match_parent"
                  android:paddingTop="5dp"
                  android:paddingBottom="5dp"
                  android:orientation="horizontal"
                  android:weightSum="5"
                  android:layout_height="55dp">
        <TextView android:layout_width="0dp"
                  android:id="@+id/tv_video"
                  android:text="视频"
                  android:gravity="center"
                  android:textColor="@color/color_black"
                  android:shadowColor="@color/color_b1b1b1"
                  android:shadowDx="5"
                  android:shadowDy="5"
                  android:shadowRadius="3"
                  android:textSize="15sp"
                  android:background="@drawable/shape_rec_bg"
                  android:layout_weight="1"
                  android:layout_marginTop="8dp"
                  android:layout_marginBottom="8dp"
                  android:layout_marginLeft="8dp"
                  android:layout_marginRight="8dp"
                  android:layout_height="match_parent"/>
        <TextView android:layout_width="0dp"
                  android:id="@+id/tv_txt"
                  android:text="美文"
                  android:gravity="center"
                  android:textColor="@color/color_black"
                  android:shadowColor="@color/color_b1b1b1"
                  android:shadowDx="5"
                  android:shadowDy="5"
                  android:shadowRadius="3"
                  android:textSize="15sp"
                  android:background="@drawable/shape_rec_bg"
                  android:layout_weight="1"
                  android:layout_marginTop="8dp"
                  android:layout_marginBottom="8dp"
                  android:layout_marginLeft="8dp"
                  android:layout_marginRight="8dp"
                  android:layout_height="match_parent"/>
        <TextView android:layout_width="0dp"
                  android:id="@+id/tv_image"
                  android:text="图片"
                  android:gravity="center"
                  android:textColor="@color/color_black"
                  android:shadowColor="@color/color_b1b1b1"
                  android:shadowDx="5"
                  android:shadowDy="5"
                  android:shadowRadius="3"
                  android:textSize="15sp"
                  android:background="@drawable/shape_rec_bg"
                  android:layout_weight="1"
                  android:layout_marginTop="8dp"
                  android:layout_marginBottom="8dp"
                  android:layout_marginLeft="8dp"
                  android:layout_marginRight="8dp"
                  android:layout_height="match_parent"/>
        <TextView android:layout_width="0dp"
                  android:id="@+id/tv_joke"
                  android:text="搞笑"
                  android:gravity="center"
                  android:textColor="@color/color_black"
                  android:shadowColor="@color/color_b1b1b1"
                  android:shadowDx="5"
                  android:shadowDy="5"
                  android:shadowRadius="3"
                  android:textSize="15sp"
                  android:background="@drawable/shape_rec_bg"
                  android:layout_weight="1"
                  android:layout_marginTop="8dp"
                  android:layout_marginBottom="8dp"
                  android:layout_marginLeft="8dp"
                  android:layout_marginRight="8dp"
                  android:layout_height="match_parent"/>
        <TextView android:layout_width="0dp"
                  android:id="@+id/tv_essay"
                  android:text="essay"
                  android:gravity="center"
                  android:textColor="@color/color_black"
                  android:shadowColor="@color/color_b1b1b1"
                  android:shadowDx="5"
                  android:shadowDy="5"
                  android:shadowRadius="3"
                  android:textSize="15sp"
                  android:background="@drawable/shape_rec_bg"
                  android:layout_weight="1"
                  android:layout_marginTop="8dp"
                  android:layout_marginBottom="8dp"
                  android:layout_marginLeft="8dp"
                  android:layout_marginRight="8dp"
                  android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView android:layout_width="match_parent"
              android:text="推荐"
              android:drawablePadding="10dp"
              android:paddingLeft="5dp"
              android:textColor="@color/color_494949"
              android:drawableLeft="@drawable/shape_header_layout"
              android:gravity="center_vertical"
              android:layout_height="35dp"/>
    <View android:layout_height="0.5dp"
          android:background="@color/color_eaeaea"
          android:layout_width="match_parent"/>
</LinearLayout>