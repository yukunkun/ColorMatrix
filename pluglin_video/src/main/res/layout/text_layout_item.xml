<?xml version="1.0" encoding="utf-8"?>
<com.ykk.pluglin_video.views.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       android:background="@color/color_write"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="55dp">
                <de.hdodenhof.circleimageview.CircleImageView android:layout_width="40dp"
                                                              android:id="@+id/ci_head"
                                                              app:civ_border_width="1dp"
                                                              app:civ_border_color="@color/color_94abaaaa"
                                                              android:src="@mipmap/tool_icon"
                                                              android:layout_marginLeft="10dp"
                                                              android:layout_centerVertical="true"
                                                              android:layout_height="40dp"/>
                <TextView android:layout_width="match_parent"
                          android:id="@+id/tv_name"
                          android:text=""
                          android:singleLine="true"
                          android:ellipsize="end"
                          android:textColor="@color/color_black"
                          android:gravity="center_vertical"
                          android:textSize="15sp"
                          android:layout_marginTop="9dp"
                          android:layout_toRightOf="@id/ci_head"
                          android:paddingLeft="10dp"
                          android:layout_marginRight="40dp"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                          android:layout_marginRight="40dp"
                          android:id="@+id/tv_title"
                          android:text=""
                          android:singleLine="true"
                          android:ellipsize="end"
                          android:textColor="@color/color_494949"
                          android:gravity="center_vertical"
                          android:textSize="14sp"
                          android:layout_marginTop="28dp"
                          android:layout_toRightOf="@id/ci_head"
                          android:paddingLeft="10dp"
                          android:layout_height="wrap_content"/>
                <ImageView android:layout_width="50dp"
                           android:layout_alignParentRight="true"
                           android:padding="10dp"
                           android:id="@+id/iv_collect"
                           android:layout_centerVertical="true"
                           android:src="@mipmap/collection"
                           android:layout_height="50dp"/>

                <View android:layout_height="0.5dp"
                      android:layout_alignParentBottom="true"
                      android:background="@color/color_94abaaaa"
                      android:layout_width="match_parent"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="240dp">
                <ImageView android:layout_width="match_parent"
                           android:id="@+id/im_cover"
                           android:scaleType="centerCrop"
                           android:layout_height="match_parent"/>
                <TextView android:layout_width="match_parent"
                          android:maxLines="2"
                          android:id="@+id/tv_des"
                          android:text=""
                          android:background="@drawable/shape_deauty"
                          android:textColor="@color/color_write"
                          android:textSize="15sp"
                          android:ellipsize="end"
                          android:padding="10dp"
                          android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView android:layout_width="match_parent"
                      android:id="@+id/tv_forword"
                      android:layout_centerVertical="true"
                      android:paddingLeft="10dp"
                      android:text=""
                      android:textColor="@color/color_2b2b2b"
                      android:textSize="17sp"
                      android:maxLines="4"
                      android:layout_marginTop="12dp"
                      android:layout_marginBottom="14dp"
                      android:ellipsize="end"
                      android:gravity="center_vertical"
                      android:layout_height="wrap_content"/>
            <View android:layout_height="8dp"
                  android:background="@color/color_eaeaea"
                  android:layout_width="match_parent"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/delete"
            android:text="删除"
            android:textColor="@color/color_ff0008"
            android:textSize="16sp"
            android:background="@color/color_write"
            android:layout_width="80dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</com.ykk.pluglin_video.views.SwipeItemLayout>