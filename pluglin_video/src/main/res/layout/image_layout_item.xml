<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/color_write"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="50dp">
        <de.hdodenhof.circleimageview.CircleImageView android:layout_width="40dp"
                                                      android:id="@+id/ci_head"
                                                      app:civ_border_width="1dp"
                                                      app:civ_border_color="@color/color_94abaaaa"
                                                      android:src="@mipmap/tool_icon"
                                                      android:layout_marginLeft="10dp"
                                                      android:layout_centerVertical="true"
                                                      android:layout_height="40dp"/>
        <TextView android:layout_width="250dp"
                  android:id="@+id/tv_name"
                  android:text=""
                  android:singleLine="true"
                  android:ellipsize="end"
                  android:textColor="@color/color_494949"
                  android:gravity="center_vertical"
                  android:textSize="16sp"
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@id/ci_head"
                  android:paddingLeft="10dp"
                  android:layout_height="50dp"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_times"
                  android:text=""
                  android:layout_alignParentRight="true"
                  android:paddingRight="10dp"
                  android:layout_centerVertical="true"
                  android:ellipsize="end"
                  android:singleLine="true"
                  android:layout_marginTop="10dp"
                  android:textColor="@color/color_494949"
                  android:gravity="center_vertical"
                  android:textSize="16sp"
                  android:layout_height="20dp"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="match_parent"
                   android:id="@+id/im_cover"
                   android:scaleType="center"
                   android:layout_marginTop="5dp"
                   android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView android:layout_width="match_parent"
              android:id="@+id/tv_title"
              android:text=""
              android:paddingRight="10dp"
              android:maxLines="10"
              android:ellipsize="end"
              android:layout_marginBottom="10dp"
              android:layout_marginTop="10dp"
              android:textColor="@color/color_494949"
              android:gravity="center_vertical"
              android:textSize="16sp"
              android:paddingLeft="10dp"
              android:layout_height="wrap_content"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="50dp">
        <View android:layout_height="0.5dp"
              android:background="@color/color_94abaaaa"
              android:layout_width="match_parent"/>
        <ImageView android:layout_width="25dp"
                   android:id="@+id/iv_play"
                   android:src="@mipmap/comment"
                   android:layout_marginLeft="10dp"
                   android:layout_centerVertical="true"
                   android:layout_height="25dp"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_play_times"
                  android:text="6"
                  android:layout_toRightOf="@id/iv_play"
                  android:paddingRight="10dp"
                  android:layout_centerVertical="true"
                  android:ellipsize="end"
                  android:singleLine="true"
                  android:layout_marginTop="10dp"
                  android:textColor="@color/color_494949"
                  android:gravity="center_vertical"
                  android:textSize="16sp"
                  android:paddingLeft="10dp"
                  android:layout_height="20dp"/>

        <ImageView android:layout_width="35dp"
                   android:padding="5dp"
                   android:id="@+id/iv_share"
                   android:src="@mipmap/skip"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="5dp"
                   android:layout_alignParentRight="true"
                   android:layout_height="35dp"/>
        <ImageView android:layout_width="35dp"
                   android:id="@+id/iv_collect"
                   android:padding="4dp"
                   android:src="@mipmap/collection"
                   android:layout_marginRight="0dp"
                   android:layout_toLeftOf="@+id/iv_share"
                   android:layout_centerVertical="true"
                   android:layout_height="35dp"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:background="@color/color_eaeaea"
          android:layout_height="10dp"/>
</LinearLayout>