<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_200"
        android:layout_marginLeft="@dimen/dimens_40"
        android:layout_marginRight="@dimen/dimens_40"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/dimens_5"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="@dimen/dimens_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_3e878787"
                android:paddingLeft="@dimen/dimens_10"
                android:paddingRight="@dimen/dimens_10" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_45"
                android:gravity="center"
                android:text="请登录"
                android:textColor="@color/color_whit"
                android:textSize="16sp" />

            <include layout="@layout/include_line_no_marg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_whit">

                <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dimens_20"
                    android:paddingTop="@dimen/dimens_10"
                    android:paddingBottom="@dimen/dimens_10"
                    android:text="请先登录，才能使用聊天功能"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_login"
                    android:layout_marginBottom="@dimen/dimens_20"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/dimens_200"
                    android:gravity="center"
                    android:text="登录"
                    android:background="@drawable/tuichushape"
                    android:textColor="@color/color_whit"
                    android:textSize="@dimen/sp_16"
                    android:paddingBottom="@dimen/dimens_10"
                    android:paddingTop="@dimen/dimens_10"
                    android:layout_height="@dimen/dimens_40" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>