<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.matrix.yukun.matrix.setting_module.SettingActivity">
    <RelativeLayout
        android:background="@color/color_252525"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_60">
        <ImageView
            android:padding="15dp"
            android:onClick="SetingBack"
            android:transitionName="share"
            android:src="@mipmap/abc_ic_ab_back_mtrl_am_alpha"
            android:layout_width="@dimen/dimens_60"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:paddingRight="@dimen/dimens_20"
            android:layout_alignParentRight="true"
            android:text="Setting"
            android:gravity="center"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/color_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="developer:KunYu(å ƒ)"
            android:textColor="@color/color_81e9e9e9"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_50" />
        <ListView
            android:id="@+id/mListview"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutAnimation="@anim/layout_anim"
            />
    </RelativeLayout>
</LinearLayout>
