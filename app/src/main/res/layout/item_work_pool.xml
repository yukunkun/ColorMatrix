<?xml version="1.0" encoding="utf-8"?>
<!--lhy-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--图片展示区域-->
        <include
            android:id="@+id/rl_1"
            layout="@layout/item_work_pool_capacity"/>

        <!--文字展示区域-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_1"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/work_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:lines="2"
                android:textColor="@color/color_666666"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <include layout="@layout/include_line_no_marg"/>

            <!--评分和播放次数-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/work_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4dp"
                    android:drawableStart="@mipmap/ic_eye"
                    android:textColor="@color/color_999999"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_toRightOf="@+id/work_count"
                    android:id="@+id/work_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:drawablePadding="4dp"
                    android:drawableStart="@mipmap/ic_grade"
                    android:textColor="@color/color_999999"
                    android:textSize="11sp"/>
                <ImageView
                    android:id="@+id/image_more"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/card_view">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/work_avatar"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="9dp"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_toEndOf="@id/work_avatar"
                android:text="UserName"
                android:textColor="@color/color_999999"
                android:textSize="11sp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>


