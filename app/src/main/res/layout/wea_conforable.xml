<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:yk="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/conf_title"
        android:background="@color/color_82000000"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50">
        <LinearLayout
            android:background="?android:attr/actionBarItemBackground"
            android:id="@+id/tomorrow_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:padding="12dp"
                android:src="@mipmap/abc_ic_ab_back_mtrl_am_alpha"
                android:layout_width="@dimen/dimens_60"
                android:layout_height="match_parent" />
        </LinearLayout>

            <com.mcxtzhang.pathanimlib.PathAnimView
                android:id="@+id/pathAnimView1"
                android:layout_width="120dp"
                android:layout_centerInParent="true"
                android:layout_height="match_parent"
                android:paddingTop="20dp"/>
        <ImageView
            android:id="@+id/search"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_explore_search_pressed"
            android:layout_width="@dimen/dimens_40"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:background="@color/color_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:background="@color/color_back_more"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content">
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:visibility="visible"
                android:layout_marginTop="@dimen/dimens_10"
                android:layout_width="match_parent"
                android:layout_height="250dp">
            <TextView
                android:id="@+id/today_city"
                android:textSize="32sp"
                android:text="成都"
                android:layout_marginLeft="10dp"
                android:textColor="@color/color_whit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/today_refresh"
                android:layout_below="@+id/today_city"
                android:src="@mipmap/ic_refresh_dark"
                android:layout_width="30dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/today_refreshs"
                android:layout_toRightOf="@+id/today_refresh"
                android:layout_below="@+id/today_city"
                android:textSize="20sp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="18dp"
                android:textColor="@color/color_whit"
                android:text="刷新"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/confshape"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/today_time"
                    android:text="2017-01-01 20:12"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textColor="@color/color_57f733"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </RelativeLayout>
                <RelativeLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">
                    <include
                        layout="@layout/weather_button"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">
                   <LinearLayout
                       android:orientation="vertical"
                       android:layout_width="@dimen/dimens_120"
                       android:layout_height="wrap_content">
                       <TextView
                           android:textSize="15sp"
                           android:text="人体舒适度:"
                           android:textColor="@color/color_82ffffff"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:id="@+id/conf_air"
                           android:text=""
                           android:textSize="55sp"
                           android:gravity="center"
                           android:textColor="@color/color_54fa3e"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content" />
                   </LinearLayout>
                </RelativeLayout>
                <com.matrix.yukun.matrix.selfview.WaterLoadView
                    android:id="@+id/waterload"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_alignParentBottom="true"
                    yk:circleColor="#FF0077"
                    yk:circleTop="90"
                    yk:circleSmallRadio="8"
                    yk:loadTime="1000" />
            </RelativeLayout>
            <View
                android:background="@color/color_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_40">
                <ImageView
                    android:id="@+id/image"
                    android:layout_marginLeft="2dp"
                    android:src="@mipmap/ic_explore_game_pressed"
                    android:layout_width="@dimen/dimens_40"
                    android:layout_height="@dimen/dimens_40" />
                <TextView
                    android:layout_toRightOf="@+id/image"
                    android:text="人体舒适度:"
                    android:textSize="15sp"
                    android:textColor="@color/color_whit"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_40" />
            </RelativeLayout>
            <View
                android:background="@color/color_82181818"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <com.matrix.yukun.matrix.selfview.MyListView
                android:id="@+id/mylistview"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>