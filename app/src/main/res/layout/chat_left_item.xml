<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView
        android:id="@+id/left_time"
        android:text="20:15"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:textColor="@color/color_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_20"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_below="@+id/left_time"
        android:layout_marginLeft="5dp"
        app:civ_border_color="@color/color_lines"
        app:civ_border_width="1dp"
        android:layout_marginTop="5dp"
        android:id="@+id/ci_left_head"
        android:src="@mipmap/tool_icon"
        android:layout_width="@dimen/dimens_45"
        android:layout_height="@dimen/dimens_45"/>
    <TextView
        android:layout_below="@+id/left_time"
        android:layout_toRightOf="@+id/ci_left_head"
        android:text=""
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:textIsSelectable="true"
        android:gravity="center_vertical"
        android:background="@drawable/balloon_l_pressed"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/tv_left_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>