<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_bg"
    android:background="@color/color_whit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_barrage_layout"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_height="match_parent">
            <com.matrix.yukun.matrix.barrage_module.views.VerticalTextView
                android:id="@+id/vertical_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom_layout"
        android:background="@color/color_714d4d4d"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <View
            android:background="@color/color_b3ffffff"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="50dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_setting"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_history"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_history"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/et_msg"
                android:background="@drawable/shape_et_bg"
                android:textSize="14sp"
                android:hint="输入内容"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_send"
                android:layout_toRightOf="@+id/et_msg"
                android:background="@drawable/selecor_send"
                android:text="发送"
                android:textSize="12sp"
                android:textColor="@color/color_00ff00"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>