<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/dimens_10"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_city"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/today_city"
            android:textSize="32sp"
            android:text="成都"
            android:textColor="@color/color_whit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_location"
            android:layout_below="@+id/today_city"
            android:layout_marginTop="@dimen/dimens_5"
            android:src="@mipmap/icon_weather_pos"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dimens_10"
            android:textColor="@color/color_whit"
            android:layout_width="@dimen/dimens_30"
            android:layout_height="@dimen/dimens_30" />

        <TextView
            android:id="@+id/tv_qua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_location"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_57f733"
            android:textSize="35sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/real"
        android:layout_alignParentRight="true"
        android:layout_width="100dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_back"
        android:layout_height="130dp">
        <TextView
            android:id="@+id/today_time"
            android:text=""
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@color/color_whit"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/today_class"
            android:layout_below="@+id/today_time"
            android:textColor="@color/color_57f733"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_wea"
        android:layout_below="@+id/real"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:paddingTop="@dimen/dimens_10"
        android:paddingBottom="@dimen/dimens_10"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/today_image"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/tv_temperature"
            android:textColor="@color/color_000000"
            android:layout_below="@+id/today_image"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text=""
            android:shadowColor="@color/color_bfbfbf"
            android:textStyle="italic"
            android:shadowRadius="1"
            android:shadowDx="10"
            android:shadowDy="5"
            android:textSize="100sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_today_pm"
            android:layout_below="@+id/tv_temperature"
            android:textColor="@color/color_57f733"
            android:textSize="18sp"
            android:gravity="center"
            android:paddingLeft="@dimen/dimens_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/rl_wea"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_height="@dimen/dimens_100">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        </RelativeLayout>
        <View
            android:background="@color/color_back_all"
            android:layout_width="1dp"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/dimens_50"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>