<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tool_module.map.activity.AMapActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.amap.api.maps.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.amap.api.maps.MapView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:background="@color/color_whit"
                android:padding="@dimen/dimens_5"
                app:cardCornerRadius="@dimen/dimens_3"
                app:cardElevation="@dimen/dimens_5"
                android:layout_marginBottom="@dimen/dimens_14"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:weightSum="3"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:padding="@dimen/dimens_10"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_weather"
                        android:layout_weight="1"
                        android:text="天气"
                        android:textSize="16sp"
                        android:textColor="@drawable/selector_map_txt"
                        android:background="?android:attr/actionBarItemBackground"
                        android:clickable="true"
                        android:paddingLeft="@dimen/dimens_10"
                        android:paddingRight="@dimen/dimens_10"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="0.5dp"
                        android:paddingTop="@dimen/dimens_3"
                        android:background="@color/color_back"
                        android:paddingBottom="@dimen/dimens_3"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/tv_near"
                        android:layout_weight="1"
                        android:text="附近"
                        android:textSize="16sp"
                        android:textColor="@drawable/selector_map_txt"
                        android:background="?android:attr/actionBarItemBackground"
                        android:clickable="true"
                        android:paddingLeft="@dimen/dimens_10"
                        android:paddingRight="@dimen/dimens_10"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="0.5dp"
                        android:paddingTop="@dimen/dimens_3"
                        android:background="@color/color_back"
                        android:paddingBottom="@dimen/dimens_3"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/tv_line"
                        android:layout_weight="1"
                        android:text="路线"
                        android:textSize="16sp"
                        android:textColor="@drawable/selector_map_txt"
                        android:background="?android:attr/actionBarItemBackground"
                        android:clickable="true"
                        android:paddingLeft="@dimen/dimens_10"
                        android:paddingRight="@dimen/dimens_10"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:padding="@dimen/dimens_5"
                android:layout_width="@dimen/dimens_50"
                android:paddingBottom="@dimen/dimens_3"
                android:layout_marginLeft="@dimen/dimens_3"
                android:layout_marginTop="@dimen/dimens_45"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:id="@+id/cv_searvh"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:background="@color/color_whit"
                    android:padding="@dimen/dimens_5"
                    app:cardElevation="@dimen/dimens_5"
                    app:cardCornerRadius="@dimen/dimens_18"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_search"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dimens_8"
                        android:transitionName="share"
                        android:background="?android:attr/actionBarItemBackground"
                        android:src="@mipmap/icon_search_skip"
                        android:layout_width="@dimen/dimens_35"
                        android:layout_height="@dimen/dimens_35" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_lev"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimens_5"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/cv_searvh"
                    android:background="@color/color_whit"
                    android:padding="@dimen/dimens_5"
                    app:cardElevation="@dimen/dimens_5"
                    app:cardCornerRadius="@dimen/dimens_18"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_leavel"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dimens_8"
                        android:background="?android:attr/actionBarItemBackground"
                        android:src="@mipmap/icon_map_leavel"
                        android:layout_width="@dimen/dimens_35"
                        android:layout_height="@dimen/dimens_35" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_map_leavel"
                    android:layout_below="@+id/cv_lev"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:background="@color/color_whit"
                    android:layout_marginTop="@dimen/dimens_5"
                    android:visibility="gone"
                    android:padding="@dimen/dimens_5"
                    app:cardCornerRadius="@dimen/dimens_3"
                    app:cardElevation="@dimen/dimens_5"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="@dimen/dimens_5"
                        android:weightSum="4"
                        android:orientation="vertical"
                        android:layout_width="@dimen/dimens_40"
                        android:layout_height="180dp">
                        <ImageView
                            android:id="@+id/iv_map_normal"
                            android:src="@mipmap/icon_map_normal"
                            android:clickable="true"
                            android:background="?android:attr/actionBarItemBackground"
                            android:padding="@dimen/dimens_5"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="0dp" />
                        <View
                            android:layout_width="match_parent"
                            android:paddingLeft="@dimen/dimens_3"
                            android:background="@color/color_back"
                            android:paddingRight="@dimen/dimens_3"
                            android:layout_height="0.5dp"/>
                        <ImageView
                            android:id="@+id/iv_map_plant"
                            android:src="@mipmap/icon_map_plant"
                            android:clickable="true"
                            android:background="?android:attr/actionBarItemBackground"
                            android:padding="@dimen/dimens_5"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="0dp" />
                        <View
                            android:layout_width="match_parent"
                            android:paddingLeft="@dimen/dimens_3"
                            android:background="@color/color_back"
                            android:paddingRight="@dimen/dimens_3"
                            android:layout_height="0.5dp"/>
                        <ImageView
                            android:id="@+id/iv_map_night"
                            android:src="@mipmap/icon_map_night"
                            android:clickable="true"
                            android:background="?android:attr/actionBarItemBackground"
                            android:padding="@dimen/dimens_5"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="0dp" />
                        <View
                            android:layout_width="match_parent"
                            android:paddingLeft="@dimen/dimens_3"
                            android:background="@color/color_back"
                            android:paddingRight="@dimen/dimens_3"
                            android:layout_height="0.5dp"/>
                        <ImageView
                            android:id="@+id/iv_map_traffic"
                            android:src="@mipmap/icon_map_traffic"
                            android:clickable="true"
                            android:background="?android:attr/actionBarItemBackground"
                            android:padding="@dimen/dimens_5"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="0dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="@dimen/dimens_50">
        <ImageView
            android:id="@+id/iv_back"
            android:padding="@dimen/dimens_5"
            android:layout_centerVertical="true"
            android:background="?android:attr/actionBarItemBackground"
            android:src="@mipmap/joke_back"
            android:layout_width="@dimen/dimens_40"
            android:layout_height="@dimen/dimens_50" />
    </RelativeLayout>
</RelativeLayout>