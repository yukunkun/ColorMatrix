<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black"
    >
    <uk.co.senab.photoview.PhotoView android:layout_width="match_parent"
                                     android:id="@+id/photoview"
                                     android:layout_height="match_parent"/>
    <ImageView android:layout_width="match_parent"
               android:id="@+id/iv_images"
               android:transitionName="shareView"
               android:scaleType="center"
               android:layout_height="match_parent"/>
    <ImageView android:layout_width="@dimen/dimens_45"
               android:padding="10dp"
               android:layout_marginTop="@dimen/dimens_20"
               android:id="@+id/iv_back"
               android:src="@mipmap/ic_back"
               android:layout_height="50dp"/>
    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="@dimen/dimens_45"
        android:padding="10dp"
        android:layout_marginTop="@dimen/dimens_20"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimens_5"
        android:src="@mipmap/icon_more_video"
        android:layout_height="50dp"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="60dp"
        android:layout_centerInParent="true"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:visibility="visible"
        />

</RelativeLayout>
