<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/dimens_20"
    android:paddingBottom="@dimen/dimens_20"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:background="@color/color_bfbfbf"
        android:layout_marginRight="@dimen/dimens_20"
        android:layout_marginLeft="@dimen/dimens_20"
        app:cardCornerRadius="@dimen/dimens_10"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_header"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimens_20"
                android:layout_marginLeft="@dimen/dimens_10"
                android:layout_marginRight="@dimen/dimens_10"
                android:layout_height="@dimen/dimens_70">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv_avatar"
                    android:layout_width="@dimen/dimens_50"
                    android:layout_height="@dimen/dimens_50" />
                <RelativeLayout
                    android:layout_marginLeft="@dimen/dimens_10"
                    android:paddingTop="@dimen/dimens_3"
                    android:paddingBottom="@dimen/dimens_3"
                    android:layout_toRightOf="@+id/cv_avatar"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_title"
                        android:maxLines="1"
                        android:textSize="13sp"
                        android:textColor="@color/color_line"
                        android:layout_marginRight="@dimen/dimens_10"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_slogan"
                        android:maxLines="1"
                        android:textSize="14sp"
                        android:textColor="@color/color_595959"
                        android:layout_marginTop="@dimen/dimens_10"
                        android:layout_below="@+id/tv_title"
                        android:layout_marginRight="@dimen/dimens_8"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/rl_header"
                android:layout_width="match_parent"
                android:padding="@dimen/dimens_10"
                android:layout_height="250dp">
                <ImageView
                    android:id="@+id/iv_cover"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_des"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/dimens_5"
                    android:layout_marginRight="@dimen/dimens_8"
                    android:layout_marginLeft="@dimen/dimens_8"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:textColor="@color/color_whit"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>