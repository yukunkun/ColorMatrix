<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_back_conf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="@color/color_81e9e9e9"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_40">
        <ImageView
            android:id="@+id/image"
            android:layout_marginLeft="2dp"
            android:src="@mipmap/ic_explore_game_pressed"
            android:layout_width="@dimen/dimens_40"
            android:layout_height="@dimen/dimens_40" />
        <TextView
            android:layout_toRightOf="@+id/image"
            android:text="人体舒适度:"
            android:textSize="15sp"
            android:textColor="@color/color_whit"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_40" />
    </RelativeLayout>
    <View
        android:background="@color/color_82181818"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <com.matrix.yukun.matrix.selfview.NoScrollListView
        android:id="@+id/scrollListView"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>