<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/color_write"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="50dp">
        <de.hdodenhof.circleimageview.CircleImageView android:layout_width="40dp"
                                                      android:id="@+id/ci_head"
                                                      app:civ_border_width="1dp"
                                                      app:civ_border_color="@color/color_94abaaaa"
                                                      android:src="@mipmap/tool_icon"
                                                      android:layout_marginLeft="10dp"
                                                      android:layout_centerVertical="true"
                                                      android:layout_height="40dp"/>

        <TextView android:layout_width="match_parent"
                  android:id="@+id/tv_name"
                  android:text=""
                  android:textColor="@color/color_6c6c6c"
                  android:gravity="center_vertical"
                  android:textSize="16sp"
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@id/ci_head"
                  android:paddingLeft="10dp"
                  android:layout_height="50dp"/>
        <View android:layout_height="0.5dp"
              android:layout_alignParentBottom="true"
              android:background="@color/color_94abaaaa"
              android:layout_width="match_parent"/>
    </RelativeLayout>
    <TextView android:layout_width="match_parent"
              android:id="@+id/tv_joke"
              android:text=""
              android:transitionName="shareView"
              android:textColor="@color/color_494949"
              android:textSize="18sp"
              android:layout_centerVertical="true"
              android:layout_toRightOf="@id/ci_head"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:paddingTop="15dp"
              android:paddingBottom="5dp"
              android:layout_height="wrap_content"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="40dp">
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_time"
                  android:text=""
                  android:layout_marginRight="20dp"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/color_b1b1b1"
                  android:gravity="center_vertical"
                  android:textSize="14sp"
                  android:layout_centerVertical="true"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View android:layout_height="8dp"
          android:layout_alignParentBottom="true"
          android:background="@color/color_eaeaea"
          android:layout_width="match_parent"/>
</LinearLayout>