<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        />
    <com.matrix.yukun.matrix.tool_module.qrcode.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <RelativeLayout
        android:background="@color/color_whit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50">
        <ImageView
            android:id="@+id/iv_back"
            android:src="@mipmap/joke_back"
            android:padding="@dimen/dimens_10"
            android:layout_width="@dimen/dimens_50"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_photo"
            android:textSize="15sp"
            android:textColor="@color/color_282828"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="相册"
            android:layout_width="@dimen/dimens_50"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="17sp"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="扫一扫"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dimens_10"
        android:paddingRight="@dimen/dimens_10"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/dimens_90"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_my_qr_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dimens_3"
            android:gravity="center"
            android:textSize="17sp"
            android:text="一键生成我的二维码"
            android:textColor="@color/color_00ff00"
            />
        <TextView
            android:id="@+id/tv_qr_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimens_8"
            android:textSize="15sp"
            android:textIsSelectable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="将二维码放在框内，即可自动扫描"
            android:textColor="@color/white"
            />

    </LinearLayout>

</FrameLayout>