<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50">
        <ImageView
            android:id="@+id/iv_avator"
            android:layout_marginLeft="@dimen/dimens_10"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dimens_30"
            android:layout_height="@dimen/dimens_30" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textSize="14sp"
            android:textColor="@color/color_2c2c2c"
            android:layout_marginLeft="@dimen/dimens_10"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/iv_avator"
            android:paddingRight="@dimen/dimens_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_des"
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_header"
        android:paddingLeft="@dimen/dimens_10"
        android:paddingRight="@dimen/dimens_10"
        android:paddingTop="@dimen/dimens_8"
        android:paddingBottom="@dimen/dimens_8"
        android:textSize="16sp"
        android:textColor="@color/color_515151"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_cover"
        android:layout_marginTop="@dimen/dimens_3"
        android:layout_marginBottom="@dimen/dimens_3"
        android:scaleType="centerCrop"
        android:layout_below="@+id/tv_des"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_200" />
</RelativeLayout>