<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/rl_contain"
            android:background="@color/color_00000000"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_upload"
                    android:drawableLeft="@mipmap/icon_upload"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text=" -- kb/s"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dimens_3"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/color_b1697ffa"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tv_download"
                    android:layout_toRightOf="@+id/tv_upload"
                    android:drawableLeft="@mipmap/icon_download"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/dimens_3"
                    android:text=" -- kb/s"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

        </LinearLayout>

</RelativeLayout>