<?xml version="1.0" encoding="utf-8"?>
<com.matrix.yukun.matrix.main_module.views.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_write">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dimens_3"
            app:cardElevation="@dimen/dimens_3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ci_head"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/tool_icon"
                        app:civ_border_color="@color/color_94abaaaa"
                        app:civ_border_width="1dp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:layout_marginRight="40dp"
                        android:layout_toRightOf="@id/ci_head"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:layout_marginRight="40dp"
                        android:layout_toRightOf="@id/ci_head"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_494949"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_collect"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:src="@mipmap/collection" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_94abaaaa" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp">

                    <ImageView
                        android:id="@+id/im_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/tv_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_deauty"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/color_write"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/dimens_10"
                        android:layout_marginBottom="@dimen/dimens_10"
                        android:textColor="@color/color_whit" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_forword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="14dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="4"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="@color/color_2b2b2b"
                    android:textSize="17sp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <View
            android:layout_below="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_8"
            android:background="@color/color_eaeaea" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/color_write"
            android:text="删除"
            android:textColor="@color/color_ff0008"
            android:textSize="16sp" />
    </LinearLayout>
</com.matrix.yukun.matrix.main_module.views.SwipeItemLayout>