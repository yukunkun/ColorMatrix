<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingRight="@dimen/dimens_30"
        android:paddingLeft="@dimen/dimens_30"
        android:layout_height="@dimen/dimens_60">
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dimens_45"
            android:layout_height="@dimen/dimens_45" />
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_toRightOf="@+id/iv_avatar"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_2b2b2b"
            android:layout_marginLeft="@dimen/dimens_10"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:layout_marginRight="@dimen/dimens_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_add"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/shape_collect_bg_unchecked"
            android:textColor="@color/color_ff2323"
            android:padding="@dimen/dimens_3"
            android:text="添加好友"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>