<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dimens_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/rigth_time"
        android:text="20:15"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:textColor="@color/color_text"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dimens_3"
        android:paddingBottom="@dimen/dimens_3"
        android:layout_height="wrap_content"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_below="@+id/rigth_time"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:civ_border_color="@color/color_lines"
        app:civ_border_width="1dp"
        android:id="@+id/ci_right_head"
        android:layout_alignParentRight="true"
        android:src="@mipmap/tool_icon"
        android:layout_width="@dimen/dimens_45"
        android:layout_height="@dimen/dimens_45"/>
    <RelativeLayout
        android:id="@+id/rl_con"
        android:layout_below="@+id/rigth_time"
        android:layout_toLeftOf="@+id/ci_right_head"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/voice_layout"
            android:layout_width="wrap_content"
            android:background="@drawable/balloon_r_pressed"
            android:layout_marginTop="@dimen/dimens_3"
            android:layout_marginRight="@dimen/dimens_3"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimens_3"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_play"
                android:src="@mipmap/icon_video_play"
                android:layout_marginLeft="@dimen/dimens_3"
                android:layout_width="@dimen/dimens_30"
                android:layout_height="@dimen/dimens_30" />
            <ImageView
                android:src="@mipmap/icon_chat_voice_msg"
                android:layout_marginRight="@dimen/dimens_3"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dimens_30"
                android:layout_height="@dimen/dimens_30" />
        </RelativeLayout>
        <SeekBar
            android:id="@+id/seekbar"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dimens_10"
            android:layout_marginLeft="@dimen/dimens_10"
            android:layout_below="@+id/voice_layout"
            android:layout_marginTop="@dimen/dimens_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>