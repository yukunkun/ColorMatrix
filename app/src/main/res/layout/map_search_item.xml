<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_contain"
        android:paddingTop="@dimen/dimens_5"
        android:paddingLeft="@dimen/dimens_8"
        android:paddingRight="@dimen/dimens_5"
        android:paddingBottom="@dimen/dimens_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_address"
            android:layout_marginRight="@dimen/dimens_50"
            android:textSize="@dimen/dimens_16"
            android:textColor="@color/color_text"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_detail"
            android:layout_marginTop="@dimen/dimens_5"
            android:layout_marginRight="@dimen/dimens_50"
            android:layout_below="@+id/tv_address"
            android:textSize="14sp"
            android:textColor="@color/viewfinder_mask"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="@dimen/dimens_1"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_map_local"
            android:padding="@dimen/dimens_10"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dimens_40"
            android:layout_height="@dimen/dimens_40" />
    </RelativeLayout>
    <include layout="@layout/include_line_no_marg"/>
</LinearLayout>