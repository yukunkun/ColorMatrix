<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_5"
        android:layout_marginRight="@dimen/dimens_5"
        android:background="@drawable/shape_set_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_35">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:padding="10dp"
                android:src="@mipmap/close_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_eaeaea" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_download"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_45"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimens_10"
                    android:src="@mipmap/icon_dialog_download" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimens_10"
                    android:layout_toRightOf="@+id/iv_download"
                    android:gravity="center"
                    android:text="下载到本地"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_eaeaea" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_share"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_45"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimens_10"
                    android:src="@mipmap/icon_dialog_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimens_10"
                    android:layout_toRightOf="@+id/iv_share"
                    android:gravity="center"
                    android:text="分享到第三方"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_eaeaea" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_copy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_45"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimens_10"
                    android:src="@mipmap/icon_dialog_copy" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimens_10"
                    android:layout_toRightOf="@+id/iv_copy"
                    android:gravity="center"
                    android:text="@string/copy_to_jianjieban"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_eaeaea" />

            <RelativeLayout
                android:id="@+id/ll_internet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_45"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_internet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimens_10"
                    android:src="@mipmap/icon_dialog_search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimens_10"
                    android:layout_toRightOf="@+id/iv_internet"
                    android:gravity="center"
                    android:text="跳转到网页"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_call"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimens_10"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_whit"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_2b2b2b"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>