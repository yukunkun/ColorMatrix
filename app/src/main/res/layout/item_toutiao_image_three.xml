<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_des"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dimens_10"
        android:paddingRight="@dimen/dimens_10"
        android:paddingTop="@dimen/dimens_8"
        android:paddingBottom="@dimen/dimens_8"
        android:textSize="16sp"
        android:textColor="@color/color_515151"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/ll_cover"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dimens_5"
        android:paddingBottom="@dimen/dimens_10"
        android:layout_below="@+id/tv_des"
        android:orientation="horizontal"
        android:layout_height="@dimen/dimens_110">
        <ImageView
            android:id="@+id/image_cover_1"
            android:layout_marginLeft="@dimen/dimens_10"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/image_cover_2"
            android:layout_marginLeft="@dimen/dimens_3"
            android:layout_marginRight="@dimen/dimens_3"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/image_cover_3"
            android:layout_marginRight="@dimen/dimens_10"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_below="@+id/ll_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50">
        <ImageView
            android:id="@+id/iv_avator"
            android:layout_marginLeft="@dimen/dimens_10"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dimens_30"
            android:layout_height="@dimen/dimens_30" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textSize="12sp"
            android:textColor="@color/color_8a8a8a"
            android:layout_marginLeft="@dimen/dimens_10"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/iv_avator"
            android:paddingRight="@dimen/dimens_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_comment"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textSize="12sp"
            android:gravity="end"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimens_10"
            android:textColor="@color/color_8a8a8a"
            android:layout_marginLeft="@dimen/dimens_10"
            android:paddingRight="@dimen/dimens_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <include
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_header"
        android:layout_height="@dimen/dimens_1"
        layout="@layout/include_line_no_marg"/>
</RelativeLayout>