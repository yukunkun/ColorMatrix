<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:id="@+id/letv_recorder_grid_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/letv_recorder_background_gray"
        android:padding="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="多机位"
                android:textColor="@color/letv_recorder_text_color"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:padding="2dp">

                <TextView
                    android:id="@+id/letv_recorder_machine_one"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/le_recorder_angle_back"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingTop="40dp"
                    android:text="1"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/letv_recorder_machine_two"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/le_recorder_angle_back"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingTop="40dp"
                    android:text="2"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/letv_recorder_machine_three"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/le_recorder_angle_back"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingTop="40dp"
                    android:text="3"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/letv_recorder_machine_four"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/le_recorder_angle_back"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingTop="40dp"
                    android:text="4"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

</FrameLayout>