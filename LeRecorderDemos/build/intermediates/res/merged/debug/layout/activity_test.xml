<?xml version="1.0" encoding="utf-8"?>
<!--CameraView最终集成自FrameLayout-->
<com.letv.recorder.CameraView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--演示UI的创建-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000">
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="100dp"
            android:layout_marginRight="60dp"
            android:textColor="@android:color/holo_red_light"
            android:textSize="25dp"
            />
        <ImageButton
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/letv_recorder_open"
            />
        <ImageButton
            android:id="@+id/change_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:src="@drawable/letv_recorder_flash_light_close"
            android:layout_alignLeft="@id/open"
            android:layout_marginLeft="60dp"
            />
        <ImageButton
            android:id="@+id/switch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:src="@drawable/letv_recorder_postposition_camera"
            android:layout_alignLeft="@id/change_flash"
            android:layout_marginLeft="60dp"
            />
        <ImageButton
            android:id="@+id/switch_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:src="@drawable/letv_recorder_postposition_filter"
            android:layout_alignLeft="@id/switch_camera"
            android:layout_marginLeft="60dp"
            />
        <ImageButton
            android:id="@+id/set_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:src="@drawable/letv_recorder_voise_open"
            android:layout_alignLeft="@id/switch_filter"
            android:layout_marginLeft="60dp"
            />
    </RelativeLayout>

</com.letv.recorder.CameraView>
